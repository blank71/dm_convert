{%- import 'macros.jinja' as macros %}
apiVersion: compute.cnrm.cloud.google.com/v1beta1
kind: ComputeVPNTunnel
metadata:
{%- set properties = resource.get('properties', {}) %}
{{- macros.fields(properties, {'labels': 'labels'}, ' ' * 2) }}
{%- if 'name' in properties %}
  name: {{ properties['name'] | arbitrary_reference }}
{%- else %}
  name: {{ resource['name'] | arbitrary_reference }}
{%- endif %}
{%- if properties | set_difference(['name', 'labels', 'project']) %}
{# At least one field of properties was not converted to metadata and will be converted to spec. #}
spec:
  {{- macros.fields(properties, {
    'description': 'description',
    'ikeVersion': 'ikeVersion',
    'localTrafficSelector': 'localTrafficSelector',
    'peerExternalGatewayInterface': 'peerExternalGatewayInterface',
    'peerExternalGateway': 'peerExternalGatewayRef',
    'peerGcpGateway': 'peerGCPGatewayRef',
    'peerIp': 'peerIp',
    'region': 'region',
    'remoteTrafficSelector': 'remoteTrafficSelector',
    'router': 'routerRef',
    'targetVpnGateway': 'targetVPNGatewayRef',
    'vpnGatewayInterface': 'vpnGatewayInterface',
    'vpnGateway': 'vpnGatewayRef',
  }, ' ' * 2) }}
  {%- if 'sharedSecret' in properties %}
  sharedSecret:
    {{- macros.fields(properties, {'sharedSecret': 'value'}, ' ' * 4) }}
  {%- endif %}
{%- endif %}
{%- set unconvertable = properties | missing_fields((
  'sharedSecretHash',
)) %}
{%- if unconvertable %}
# Unconvertable fields found:
{{ unconvertable | join('\n# ') }}
{%- endif %}
