{%- import 'tf_macros.jinja' as macros %}
{%- set properties = resource.get('properties', {}) -%}
{%- set resource_name = resource.get('name') -%}
#tfimport-terraform import google_cloud_scheduler_job.{{ macros.get_name(resource, properties) }}  {{macros.import_project(properties['project'])}}/{{properties['region']}}/{{ resource_name }}
resource "google_cloud_scheduler_job" "{{ macros.get_name(resource, properties) }}" {
  {{- macros.write_provider() }}
  {{- macros.write_labels(properties) }}
  name = "{{ resource_name }}"
  {{- macros.fields(properties, {
    'description': 'description',
    'timeZone': 'time_zone',
    'schedule': 'schedule',
    'project': 'project',
    'region': 'region',
    'paused': 'paused',
    'attemptDeadline': 'attempt_deadline',
  }, ' ' * 2) }}
  {%- if 'httpTarget' in properties %}
  http_target {
    uri = "{{ properties.httpTarget.uri }}"
    http_method = "{{ properties.httpTarget.httpMethod }}"
    body = {{ properties.httpTarget.body }}
  }
  {%- endif %}
  {{- macros.format_dependencies(resource) | indent(2) }}
}
